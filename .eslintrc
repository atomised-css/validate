{
    "allowImportExportEverywhere": false,
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "import/no-extraneous-dependencies": [
          "error", {
          "devDependencies": true,
          "optionalDependencies": false,
          "peerDependencies": false
        }],
        "max-len": 0,
        "arrow-parens": 0
    }
}
